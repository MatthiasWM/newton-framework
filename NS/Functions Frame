/*------------------------------------------------------------------------------	G l o b a l   F u n c t i o n s	These are built into the ROM.------------------------------------------------------------------------------*/internalFuncs := {};foreach filename in ["Built-in Applications",							"Built-in Communications",							"Data Storage",							"Desktop Connection",							"Drawing",							"Endpoints",							"Filing",							"Find",							"Intelligent Assistant",							"Localization",							"Modem Setup",							"Packages",							"Pickers",							"Recognition",							"Routing",							"Sound",							"Stationery",							"System Services",							"Text and Ink",							"Transports",							"Utilities",							"Views",							if forNTK then "NTK" ] do	begin	if filename then		begin		fns := Load(home & "Global Funcs:" & filename);		foreach tag, fn in fns do			internalFuncs.(tag) := fn		end	end;/*------------------------------------------------------------------------------	These get added into the functions frame at CNotebook init------------------------------------------------------------------------------*/externalFuncs := {};if forNTK then begin	fns := Load(home & "NTK:" & "functions");	// OpenResFile, StuffHex et al	foreach tag, fn in fns do		externalFuncs.(tag) := fn;end;/*------------------------------------------------------------------------------	These are pure functions for NTK------------------------------------------------------------------------------*/constantFuncs := {};if forNTK then begin	constantFuncs := Load(home & "NTK:" & "constantFunctions")	// LocObj, ButtonBounds et alend